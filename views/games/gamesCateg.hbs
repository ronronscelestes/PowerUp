<div id="main-container">
    {{#if games}}
        <h2 id="result-for">results for:</h2>
        <h1 id="result-search-title">{{query}}</h1>
        <section id="card-gallery">
            {{#each games}}
                {{> gameCard}}
            {{/each}}
        </section>
    {{else}}
        <h2 id="result-for">results for: {{query}}</h2>
        <h1 id="result-search-title">Sorry, <br> no games <br> found</h1>
        <div id="back-home">
            <a id="back-home-bad-result" href="/">Back to homepage</a>
            <img src="/images/auth-arrow.svg" alt="">
        </div>
    {{/if}}

</div>